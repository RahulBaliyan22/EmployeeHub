<%- include('../partials/header')%>
<div class="bg-warning">
  <h6 class="ms-2">Signup Page</h6>
</div>
<div class="container mt-5">
  <%- include("../flash")%>
  <h2 class="text-center mb-4">Create an Account</h2>
  
  <form action="/signup" method="POST">
    
    <div class="form-group m-3 d-flex justify-content-center align-items-center">
      <label for="username"  class="me-3">UserName:</label>
      <input type="text" id="username" name="username" class="form-control w-50" placeholder="Enter your username" required>
    </div>
    <div class="form-group m-3 d-flex justify-content-center align-items-center">
      <label for="e"  class="me-3">Email:</label>
      <input type="email" id="e" name="email" class="form-control w-50" placeholder="Enter your Registerd Email" required>
    </div>

    <div class="form-group m-3 d-flex justify-content-center align-items-center">
      <label for="password"  class="me-3">Password:</label>
      <input type="password" id="password" name="password" class="form-control w-50" placeholder="Enter your password" required>
    </div>
   
    <div class="form-group m-3 d-flex justify-content-center align-items-center">
      <label for="confirm-password"  class="me-3">Confirm Password:</label>
      <input type="password" id="confirm-password" name="confirmpassword" class="form-control w-50" placeholder="Confirm your password" required>
    </div>
    </div>
    

    <div class="form-group text-center mt-4">
      <button type="submit" class="btn btn-success">Sign Up</button>
    </div>
  </form>

  <div class="text-center mt-3">
    <p>Already have an account? <a href="/login">Login here</a></p>
  </div>
</div>

<%- include('../partials/footer')%>