<%- include('../partials/header')%>
<div class="bg-warning">
  <h6 class="ms-2">Login Page</h6>
</div>
<div class="container mt-5">
  <%- include("../flash")%>
  <h2 class="text-center mb-4">Login to Your Account</h2>
<form action="/login" method="POST">
  <div class="form-group m-3 d-flex justify-content-center align-items-center">
    <label for="username" class="me-3">UserName:</label>
    <input type="text" id="username" name="username" class="form-control w-50" placeholder="Enter your username" required>
  </div>

  <div class="form-group m-3 d-flex justify-content-center align-items-center">
    <label for="password" class="me-3">Password:</label>
    <input type="password" id="password" name="password" class="form-control w-50" placeholder="Enter your password" required>
  </div>

  <div class="form-group text-center mt-4">
    <button type="submit" class="btn btn-success ">Login</button>
  </div>
  
</form>
<div class="text-center mt-3">
  <p>Don't have an account? <a href="/signup">Sign up here</a></p>
</div>
</div>
<%- include('../partials/footer')%>