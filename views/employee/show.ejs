<%- include('../partials/header')%> <%- include("../partials/navbar")%>
<div class="bg-warning">
  <h6 class="ms-2">DashBoard</h6>
</div>
<div class="containerShow">
  <h1>Welcome Admin Panel</h1>
  <% if (currentUser && user) { %>
  <div class="user-info">
    <h2>Hello, <%= user.eID.name %>!</h2>
    <img src="<%=user.eID.image%>" alt="" width="50px" height="50px" />
    <p>Email: <%= user.email %></p>
    <p>Employee ID: <%= user.eID._id.toString() %></p>
  </div>

  <div class="actions">
    <ul>
      <li><a href="/employee/<%=user.eID._id%>/edit">Edit Profile</a></li>
    </ul>
  </div>
  <% } else { %>
  <p>You are not authorized to view this page.</p>
  <a href="/login">Go to Login</a>
  <% } %>
</div>

<%- include("../partials/footer")%>
